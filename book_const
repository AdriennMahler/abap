REPORT zadr_const_uebung.
CLASS lcl_book DEFINITION.
  PUBLIC SECTION.
    METHODS constructor IMPORTING iv_start_titel TYPE string iv_start_author TYPE string iv_start_year TYPE i.
    METHODS get_titel RETURNING VALUE(rv_titel) TYPE string.
    METHODS get_author RETURNING VALUE(rv_author) TYPE string.
    METHODS get_year RETURNING VALUE(rv_year) TYPE i.
    METHODS display.
  PRIVATE SECTION.
    DATA: gv_titel  TYPE string,
          gv_author TYPE string,
          gv_year   TYPE i.

ENDCLASS.

CLASS lcl_book IMPLEMENTATION.
  METHOD constructor.
    me->gv_titel = iv_start_titel.
    me->gv_author = iv_start_author.
    me->gv_year = iv_start_year.
  ENDMETHOD.

  METHOD get_author.
    rv_author = me->gv_author.
  ENDMETHOD.

  METHOD get_titel.
    rv_titel = me->gv_titel.
  ENDMETHOD.

  METHOD get_year.
    rv_year = me->gv_year.
  ENDMETHOD.


  METHOD display.
    WRITE:/ 'Titel: ', get_titel( ), '| Author: ', get_author( ), '| Year:  ', get_year( ).
  ENDMETHOD.
ENDCLASS.


START-OF-SELECTION.

  DATA(lo_first_book) = NEW lcl_book( iv_start_titel = 'Crossroads' iv_start_author = 'Jonathan Franzen' iv_start_year = 2021 ).
  lo_first_book->display( ).

  DATA(lo_second_book) = NEW lcl_book( iv_start_titel = 'Budenbrooks' iv_start_author = 'Thomas Mann' iv_start_year = 1901 ).
  lo_second_book->display( ).

  DATA(lo_third_book) = NEW lcl_book( iv_start_titel = 'Anna Karenina' iv_start_author = 'Tolstoi' iv_start_year = 1867 ).
  lo_third_book->display( ).
